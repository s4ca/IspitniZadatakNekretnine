<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.DetaljiPrikaz">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="49dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/root_prikaz"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textSize="20sp"
                android:id="@+id/tv_nazivO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:textSize="20sp"
                android:id="@+id/tv_opisO"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:text="TextView" />

            <TextView
                android:textSize="20sp"
                android:id="@+id/tv_adresaO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:textSize="20sp"
                android:id="@+id/tv_brojO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:textSize="20sp"
                android:id="@+id/tv_kvadO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:textSize="20sp"
                android:id="@+id/tv_sobaO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:textSize="20sp"
                android:id="@+id/tv_cenaO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <ImageView
                android:id="@+id/iv_slikaO"
                android:layout_width="150dp"
                android:layout_height="150dp" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_lista"
            android:background="@android:color/holo_blue_dark"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:divider="@android:color/white"
            android:dividerHeight="1dp"
            android:layout_gravity="start">
        </ListView>

    </android.support.v4.widget.DrawerLayout>


</LinearLayout>