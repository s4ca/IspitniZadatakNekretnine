<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.DetailUnos">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_naziv_unos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unesite Naslov" />

            <EditText
                android:id="@+id/et_opis_unos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Opis" />

            <EditText
                android:id="@+id/et_adresa_unos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unesite adresu" />

            <EditText
                android:id="@+id/et_broj_unos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unesite broj"
                android:inputType="number" />

            <EditText
                android:id="@+id/et_kvadratura_unos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unesite kvadraturu"
                android:inputType="number" />

            <EditText
                android:id="@+id/et_broj_soba_unos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unesite broj soba"
                android:inputType="number" />

            <EditText
                android:id="@+id/et_cena_unos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unesite cenu"
                android:inputType="number" />

            <ImageView
                android:id="@+id/slika_unos"
                android:layout_width="150dp"
                android:layout_height="150dp" />

            <Button
                android:id="@+id/btn_dodajSliku_unos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dodaj sliku" />

        </LinearLayout>

        <ListView
            android:id="@+id/lv_lista"
            android:background="@android:color/holo_blue_dark"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:divider="@android:color/white"
            android:dividerHeight="1dp"
            android:layout_gravity="start">
        </ListView>

    </android.support.v4.widget.DrawerLayout>


</LinearLayout>